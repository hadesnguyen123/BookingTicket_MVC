@model Actor

@{
    ViewData["Title"] = "Add a new actor";
}
<div class="row">
    <div class="col-8 offset-2">
        <h1>DETAILS OF ACTOR</h1>
        <h3>You can edit and change something about Actor</h3>
        <div class="row">
            <div class="col-8 offset-2">
                    <div class="form-group text-center">
                        <img id="ProfilePicturePreview" style="max-width:150px;height:150px;border-radius:50%" src="@Model.ProfilePictureURL" />
                    </div>
                    <div class="form-group pt-3">
                        <label asp-for="ProfilePictureURL" class="control-lable" ></label>
                    <input asp-for="ProfilePictureURL" class="form-control" readonly />
                        <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                    </div>
                    <div class="form-group pt-3">
                        <label asp-for="FullName" class="control-lable"></label>
                    <input asp-for="FullName" class="form-control" readonly />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group pt-3">
                        <label asp-for="Bio" class="control-lable"></label>
                    <input asp-for="Bio" class="form-control" readonly />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>

                    <div class="form-group pt-4">
                        <a class="btn btn-outline-secondary " asp-action="Index">Show All</a>
                    </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $("#ProfilePictureURL").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        });
        //$(document).ready(function () {
        //    var output = document.getElementbyid('ProfilePicturePreview');
        //    output.src = $(this).val();
        //})
    </script>
}