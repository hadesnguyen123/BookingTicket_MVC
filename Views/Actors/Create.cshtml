@model Actor

@{
    ViewData["Title"] = "Add a new actor";
}
<div class="row">
    <div class="col-8 offset-2">
        <h1>ADD A NEW ACTOR</h1>
        <div class="row">
            <div class="col-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                        <img id="ProfilePicturePreview" src="" />
                    </div>
                    <div class="form-group pt-3">
                        <label asp-for="ProfilePictureURL" class="control-lable"></label>
                        <input asp-for="ProfilePictureURL" class="form-control" />
                        <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                    </div>
                    <div class="form-group pt-3">
                        <label asp-for="FullName" class="control-lable"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group pt-3">
                        <label asp-for="Bio" class="control-lable"></label>
                        <input asp-for="Bio" class="form-control" />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>

                    <div class="form-group pt-4">
                        <a class="btn btn-outline-secondary " asp-action="Index">Show All</a>
                        <input type="submit" value="Create" class="btn btn-outline-success float-md-end" />
                    </div>
                </form>
                
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $("#ProfilePictureURL").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        });
        $(document).ready(function(){
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
}